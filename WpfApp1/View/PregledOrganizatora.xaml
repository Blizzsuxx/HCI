<Window x:Class="WpfApp1.PregledOrganizatora"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="PregledOrganizatora" Height="450" Width="800">
    <Grid >



        <Button Width="40" Height="40" Margin="600,10,1,365" RenderTransformOrigin="0.5,0.5" Background="White" BorderBrush="White">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="100"/>
                </Style>
            </Button.Resources>
            <StackPanel>
                <Image Source="../resources/user.png" />
                <Image Source="/WpfApp1;component/resources/user.png" RenderTransformOrigin="-17.734,1.234" />
            </StackPanel>
        </Button>



        <Button Width="40" Height="40" Margin="705,10,43.6,365" RenderTransformOrigin="0.5,0.5" Background="White" BorderBrush="White">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="100"/>
                </Style>
            </Button.Resources>
            <StackPanel>
                <Image Source="../resources/bell.png" />
            </StackPanel>
        </Button>

        <Rectangle HorizontalAlignment="Left" Height="362" Margin="-1,58,0,0" Stroke="Black" VerticalAlignment="Top" Width="120">
            <Rectangle.Fill>
                <ImageBrush/>
            </Rectangle.Fill>
        </Rectangle>


        <Rectangle HorizontalAlignment="Left" Height="362" Margin="119,58,-0.4,0" Stroke="Black" VerticalAlignment="Top" Width="675">
            <Rectangle.Fill>
                <ImageBrush/>

            </Rectangle.Fill>
        </Rectangle>
        <Button Content="Organizatori" HorizontalAlignment="Left" Margin="24,22,0,0" VerticalAlignment="Top" Width="75" Background="LightBlue"/>
        <Button Content="Proslave" HorizontalAlignment="Left" Margin="130,22,0,0" VerticalAlignment="Top" Width="75" Background="LightBlue"/>
        <Button Content="Saradnici" HorizontalAlignment="Left" Margin="230,22,0,0" VerticalAlignment="Top" Width="75" Background="LightBlue"/>
        <Button Content="Korisnici" HorizontalAlignment="Left" Margin="332,22,0,0" VerticalAlignment="Top" Width="75" Background="LightBlue"/>
        <ListView HorizontalAlignment="Left" Height="303" Margin="130,98,0,0" VerticalAlignment="Top" Width="654">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Slika" Width="110" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Ime" Width="120" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Prezime" Width="110" DisplayMemberBinding="{Binding Age}" />
                    <GridViewColumn Header="Broj proslava" Width="75" DisplayMemberBinding="{Binding Mail}" />
                    <GridViewColumn Header="Broj telefona" Width="150" DisplayMemberBinding="{Binding Mail}" />
                    <GridViewColumn Header="Profil" Width="40" DisplayMemberBinding="{Binding Mail}" />
                    <GridViewColumn Header="Pozovi" Width="40" DisplayMemberBinding="{Binding Mail}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Width="41" Height="38">

            <StackPanel Height="38" Width="41">
                <Image Source="../resources/undo.png" Height="39" Margin="0,0,-0.2,0" />
            </StackPanel>

        </Button>

        <Button HorizontalAlignment="Left" Margin="60,68,0,0" VerticalAlignment="Top" Width="41" Height="38">

            <StackPanel Height="38" Width="41">
                <Image Source="../resources/delete2.png" Height="42" Margin="0,0,-0.2,0" />
            </StackPanel>

        </Button>
        <Button HorizontalAlignment="Left" Margin="10,120,0,0" VerticalAlignment="Top" Width="41" Height="38">

            <StackPanel Height="38" Width="41">
                <Image Source="../resources/edit.png" Height="42" Margin="0,0,-0.2,0" />
            </StackPanel>

        </Button>
        <Button HorizontalAlignment="Left" Margin="60,120,0,0" VerticalAlignment="Top" Width="41" Height="38">

            <StackPanel Height="38" Width="41">
                <Image Source="../resources/plus.png" Height="42" Margin="0,0,-0.2,0" />
            </StackPanel>

        </Button>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="358,68,0,0" TextWrapping="Wrap" Text="Trazi" VerticalAlignment="Top" Width="272"/>
        <Button HorizontalAlignment="Left" Margin="650,60,0,0" VerticalAlignment="Top" Width="41" Height="38">

            <StackPanel Height="38" Width="41">
                <Image Source="../resources/search.png" Height="34" Margin="0,0,9.8,0" />
            </StackPanel>

        </Button>
    </Grid>
</Window>
