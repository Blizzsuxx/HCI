<UserControl x:Class="WpfApp1.View.ToggleButtonUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.View" d:DataContext="{d:DesignInstance local:ToggleButtonUserControl}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="ceoGrid">
        <ToggleButton
            x:Name="dugme"
            IsChecked = "{Binding Odradjen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Style = "{StaticResource MaterialDesignActionLightToggleButton}"
            Content = "{Binding StanjeZadatka}"/>
    </Grid>
</UserControl>
