<Window x:Class="WpfApp1.View.PregledProslava"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.View"
        mc:Ignorable="d"
        Title="PregledProslava" Height="450" Width="800">
    <Grid Background="LightBlue">
        <Label Content="Proslave" HorizontalAlignment="Left" Margin="10,57,0,0" VerticalAlignment="Top" Height="35" Width="108" FontSize="20"/>
        <ListView HorizontalAlignment="Left" Height="309" Margin="10,101,0,0" VerticalAlignment="Top" Width="774" Background="White">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                    <GridViewColumn Header="Slika" Width="110" DisplayMemberBinding="{Binding slika}" />
                    <GridViewColumn Header="opis" Width="650" DisplayMemberBinding="{Binding opis}" />
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox HorizontalAlignment="Left" Height="35" Margin="279,61,0,0" TextWrapping="Wrap" Text="Trazi" VerticalAlignment="Top" Width="258" FontSize="20"/>
        <Button  HorizontalAlignment="Left" Margin="567,61,0,0" VerticalAlignment="Top" Width="35" RenderTransformOrigin="0.112,-0.115" Height="31">

            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="100"/>
                </Style>
            </Button.Resources>
            <StackPanel>
                <Image Source="../resources/search.png" RenderTransformOrigin="0.287,0.281" />
                <Image Source="/WpfApp1;component/resources/search.png" RenderTransformOrigin="-17.734,1.234" />
            </StackPanel>
        </Button>
        <Menu HorizontalAlignment="Left" Height="31" Margin="0,10,-0.4,0" VerticalAlignment="Top" Width="794">
           
            <MenuItem Header="Proslave" Width="140">
                <MenuItem Header="Pregled proslava" IsCheckable="true"  Background="White"/>
               
            </MenuItem>
            <MenuItem Header="Saradnici" Width="140">
                <MenuItem Header="Pregled saradnika" IsCheckable="true"  Background="White"/>
                <MenuItem Header="Dodavanje saradnika" IsCheckable="true"  Background="White"/>
            </MenuItem>
            <MenuItem Header="Korisnici" Width="140">
                <MenuItem Header="Pregled korisnika" IsCheckable="true"  Background="White"/>

            </MenuItem>
            <MenuItem Header="Organizatori" Width="140">
                <MenuItem Header="Pregled organizatora" IsCheckable="true"  Background="White"/>

            </MenuItem>
        </Menu>

    </Grid>
</Window>
