<Window x:Class="WpfApp1.View.PregledKorisnika"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.View"
        mc:Ignorable="d"
        Title="PregledKorisnika" Height="450" Width="800">
    <Grid Background="LightBlue">
        <ListView HorizontalAlignment="Left" Height="321" Margin="10,89,0,0" VerticalAlignment="Top" Width="774">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Slika" Width="130" DisplayMemberBinding="{Binding Slika}" />
                    <GridViewColumn Header="Ime" Width="120" DisplayMemberBinding="{Binding Ime}" />
                    <GridViewColumn Header="Prezime" Width="120" DisplayMemberBinding="{Binding Prezime}" />
                    <GridViewColumn Header="e-mail" Width="120" DisplayMemberBinding="{Binding email}" />
                    <GridViewColumn Header="korisnicko ime" Width="120" DisplayMemberBinding="{Binding KorisnickoIme}" />
                    <GridViewColumn Header="Profil" Width="120" DisplayMemberBinding="{Binding Profil}" />
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox HorizontalAlignment="Left" Height="31" Margin="275,41,0,0" TextWrapping="Wrap" Text="Trazi" VerticalAlignment="Top" Width="248" FontSize="20"/>
        <Button  HorizontalAlignment="Left" Margin="530,41,0,0" VerticalAlignment="Top" Width="35" RenderTransformOrigin="0.112,-0.115" Height="31">

            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="100"/>
                </Style>
            </Button.Resources>
            <StackPanel>
                <Image Source="../resources/search.png" RenderTransformOrigin="0.287,0.281" />
                <Image Source="/WpfApp1;component/resources/search.png" RenderTransformOrigin="-17.734,1.234" />
            </StackPanel>
        </Button>
    </Grid>
</Window>
